<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/backgroundButton</item>
        <item name="colorPrimaryDark">@color/background</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:titleTextStyle">@style/NoTitleText</item>
    </style>

    <style name="StyledTilEditTextTheme">
        <item name="colorControlNormal">#FFFFFF</item> // Cor padr√£o da linha
        <item name="colorControlActivated">#FFFFFF</item> // Cor linha e texto quando recebe foco
    </style>

    <style name="StyledTilEditText">
        <item name="android:theme">@style/StyledTilEditTextTheme</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:textColorHint">#FFFFFF</item> // Cor texto(hint) sem foco
    </style>

    <style name="NoTitleText">
        <item name="android:textSize">0sp</item>
        <item name="android:textColor">#00000000</item>
    </style>

</resources>
